<article class="col col-md-4 col-lg-3 mb-4">
    <a class="card-link" href="/products/details/<%= vehicle.productType %>/<%= vehicle.adID%>">
        <div class="card h-100">
            <div class="card-img-container">
                <span class="helper">
                    <img src="<%=vehicle.imageURLs[0] %>" class="" alt="..."/>
                </span>
                
            </div>            
            <div class="card-body">
                <h5 class="card-title <% if (vehicle.onSale.status === true) { %>
                    stripped inline
                <% } %>">
                    $ <%= vehicle.price.toLocaleString("es-AR") %>
                    
                </h5>
                <% if (vehicle.onSale.status === true) { %>
                    <h5 class="card-title inline">
                        $<%= (vehicle.price * (100 - vehicle.onSale.discount) / 100).toLocaleString("es-AR") %> 
                    </h5>
                <% } %>
                <div class="card-details">
                    <div class="row">
                        <div class="col">
                            <p class="card-text bold"><%= vehicle.brand %></p>
                        </div>
                        <div class="col">
                            <p class="card-text bold"><%= vehicle.model %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <p class="card-text"><%= vehicle.version %></p>
                        </div>
                        <div class="col">
                            <p class="card-text"><%= vehicle.year %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <p class="card-text">
                                <%= vehicle.location.neighbourhood %>,
                                <% if (vehicle.location.city === vehicle.location.province) { %>
                                    <%= vehicle.location.city %>
                                <% } else { %>
                                    <%= vehicle.location.city %>,<%= vehicle.location.province %>
                                <% } %>
                            </p>
                        </div>
                        <div class="col">
                            <p class="card-text"><%= vehicle.seller.name %></p>
                        </div>
                    </div>
                </div>
                <p class="card-text bold"><%= vehicle.kilometers.toLocaleString("es-AR") %> km<% if (vehicle.kilometers > 0) {%><%= "s" %><%} %></p>
            </div>
        </div>
    </a>
</article>    