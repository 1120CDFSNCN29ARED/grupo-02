<% let styles=['<link rel="stylesheet" href="/css/styles-header.css" />', '<link rel="stylesheet" href="/css/styles-footer.css" />', '<link rel="stylesheet" href="/css/styles-mediaquery-medium-large.css" media="(min-width: 768px" />'] %>
<%- include("./partials/head", {"styles": styles}) %>
  <%- include("./partials/header") %>
    <body>
      </header>
      <div class="container-fluid registration">        
        <div class="container-fluid container-registration-form text-center">
          <form action="/register/" method="POST" class="form-registration" enctype="multipart/form-data">
            <div class="form-floating mb-1">
              <input type="text" class="form-control registration-field" id="userName" name="userName" placeholder="Usuario" required />
              <label for="userName">Usuario</label>
            </div>
            <div class="form-floating mb-1">
              <input type="text" class="form-control registration-field" id="email" name="email" placeholder="email@host.com" required />
              <label for="email">Email</label>
            </div>
            <div class="form-floating mb-1">
              <input type="text" class="form-control registration-field" id="first_name" name="first_name" placeholder="Tu Nombre" required />
              <label for="first_name">Nombre</label>
            </div>
            <div class="form-floating mb-1">
              <input type="text" class="form-control registration-field" id="last_name" name="last_name" placeholder="Tu Apellido" required />
              <label for="last_name">Apellido</label>
            </div>
            <div class="form-floating mb-1">
              <input type="text" class="form-control registration-field" id="id_number" name="id_number" placeholder="DNI" required />
              <label for="id_number">DNI</label>
            </div>
            <div class="form-floating mb-1">
              <input type="text" class="form-control registration-field" id="telephone" name="telephone" placeholder="+5491133048054" required />
              <label for="telephone">Teléfono</label>
            </div>
            <div class="form-floating mb-1">
              <input type="text" class="form-control registration-field" id="province" name="province" placeholder="province" required />
              <label for="province">Provincia</label>
            </div>
            <div class="form-floating mb-1">
              <input type="text" class="form-control registration-field" id="city" name="city" placeholder="ciudad" required />
              <label for="city">Ciudad</label>
            </div>
            <div class="form-floating mb-1">
              <input type="text" class="form-control registration-field" id="neighbourhood" name="neighbourhood" placeholder="barrio" required />
              <label for="neighbourhood">Barrio</label>
            </div>
            <div class="form-floating mb-1">
              <input type="text" class="form-control registration-field" id="postal_code" name="postal_code" placeholder="Código Postal" required />
              <label for="postal_code">Código Postal</label>
            </div>
            <div class="form-floating mb-1">
              <input type="password" class="form-control registration-field" id="password" name="password" placeholder="Password" required />
              <label for="password">Contraseña</label>
            </div>
            <div class="form-floating mb-1">
              <input type="file" class="form-control" id="image" name="image" single>
            </div>
            <div class="container-fluid d-flex container-registration-cta">
              <div class="registration-cta">
                <a href="/login"><button type="button" class="btn-danger btn-lg btn-login">
                    Login
                  </button></a>
              </div>
              <div class="registration-cta"><button class="btn-registration-confirm btn-lg" type="submit">Confirmar</button></div>
            </div>
          </form>
        </div>
      </div>
    </body>
</html>