<!-- My style -->
<% let styles=['<link rel="stylesheet" href="/css/styles-header.css" />','<link rel="stylesheet" href="/css/styles.css" />','<link rel="stylesheet" href="/css/styles-footer.css" />','<link rel="stylesheet" href="/css/styles-mediaquery-medium-large.css" />','<link rel="stylesheet" href="/css/styles-admin.css" />'] %>
<%- include("./partials/head", {"styles": styles}) %>
    <%- include("./partials/header") %>

    <body>
        <main>
            <!-- Create an admin window that has an add or edit product option -->
            <div class="container-fluid admin text-center">
                <div class="container-fluid text-center byline">
                    <h2>Crear publicación</h2>
                </div>
                <div class="container-fluid container-admin text-center">
                    <!-- Add in buttons to link to pages for each type of product -->
                    <section class="product-type=selector">
                        <div class="container-fluid dflex mb-2">
                            <a href="/products/create/vehicle"><button type="submit"
                                    class="btn-lg btn-outline-danger mb-2">Vehículo</button></a>
                            <a href="/products/create/part"><button type="submit"
                                    class="btn-lg btn-outline-danger mb-2">Repuesto</button></a>
                        </div>
                    </section>
                    
                    <% if (productType === "vehicle" ) { %>
                        <%- include("./partials/vehicleForm", {action: "create"})%>
                    <% } else if (productType === "part" ) { %>                         
                        <%- include("./partials/partForm", {action: "create"}) %> 
                    <% } %>
                </div>
            </div>
        </main>
        <%- include("./partials/footer") %>
            <!-- Bootstrap JS Bundle -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
                crossorigin="anonymous"></script>
    </body>
</html>